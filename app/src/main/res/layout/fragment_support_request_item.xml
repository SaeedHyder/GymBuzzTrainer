<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/x5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivNotification"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:scaleType="fitXY"
            android:layout_marginEnd="@dimen/x7"
            android:layout_marginStart="@dimen/x20"
            android:src="@drawable/profilepic" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <com.app.gymbuzz.ui.views.AnyTextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_accent"
                android:textSize="@dimen/x12"
                app:typeface="@string/font_normal"
                android:text="Jonela White" />

            <com.app.gymbuzz.ui.views.AnyTextView
                android:id="@+id/txtZone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black0"
                android:textSize="@dimen/x11"
                app:typeface="@string/font_normal"
                android:text="Zone A" />

            <com.app.gymbuzz.ui.views.AnyTextView
                android:id="@+id/txtMachine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black0"
                android:textSize="@dimen/x11"
                app:typeface="@string/font_normal"
                android:text="Machine: Triceps" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llDateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="top"
                android:orientation="horizontal">

                <com.app.gymbuzz.ui.views.AnyTextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x5"
                    android:textColor="@color/black0"
                    android:textSize="@dimen/x10"
                    app:typeface="@string/font_normal"
                    android:text="03:00 pm" />



                <View
                    android:layout_width="@dimen/x1"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/x2"
                    android:background="@color/grey" />

                <com.app.gymbuzz.ui.views.AnyTextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x5"
                    android:textColor="@color/black0"
                    android:textSize="@dimen/x10"
                    app:typeface="@string/font_normal"
                    android:text="4 junly 2017" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llbtnSupport"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

            <Button
                android:id="@+id/btnSupport"
                android:layout_width="@dimen/x70"
                android:layout_height="@dimen/x20"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/x30"
                android:layout_marginStart="@dimen/x30"
                android:background="@drawable/btn"
                android:elevation="@dimen/x10"
                android:textSize="@dimen/x10"
                android:text="@string/assigned"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:alpha="0.5"
        android:background="@color/grey" />

</LinearLayout>